<Window x:Class="photo_render.Window.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photo_render.Window"
        mc:Ignorable="d"
        Title="Photo Render" Height="450" Width="600">
    <Grid>
        <Menu HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Top">
            <MenuItem Header="Открыть" Cursor="Hand"  Click="LoadImage_Click"/>
            <MenuItem Header="Фильтр" Cursor="Hand" HorizontalAlignment="Right">
                <!-- кнопки для фильтров -->
                <Button Content="Оттенки серого" Click="Grayscale_Click"/>
            </MenuItem>
        </Menu>
        <Grid HorizontalAlignment="Left" Height="400" Margin="0,20,0,0" VerticalAlignment="Top" Width="400"/>

    </Grid>
</Window>
